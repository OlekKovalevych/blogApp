<p id="notice"><%= notice %></p>
<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1><%= "#{@user.name}  #{@user.surname}" %> articles</h1>
    </div>
  </section>
  <div class="album py-2 bg-light">
    <div class="container">
      <div class="col-md-5">
        <div class="card mb-2 box-shadow">
          <table>
            <thead>
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th colspan="6"></th>
            </tr>
            </thead>
            <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td><%= article.title.capitalize %></td>
                <td><%= article.body.capitalize %></td>
                <td>
                  <div class="btn  btn-outline-info">
                    <%= link_to 'Show', user_article_path(@user, article) %>
                  </div>
                </td>
                <td>
                  <div class="btn  btn-outline-info">
                    <%= link_to 'Edit', edit_user_article_path(@user, article) %></div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

