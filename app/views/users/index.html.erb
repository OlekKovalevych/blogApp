<p id="notice"><%= notice %></p>

<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1>Users</h1>
    </div>
  </section>
  <% @users.each do |user| %>
    <div class="album py-2 bg-light">
      <div class="container">
        <div class="col-md-5">
          <div class="card mb-2 box-shadow">
            <table>
              <thead>
              <tr>
                <th>Name</th>
                <th>Surname</th>
                <th colspan="3"></th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.surname %></td>
                <td><%= link_to 'Show', user %></td>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    </div>
  <% end %>
  <%= link_to 'New User', new_user_registration_path %>
</main>

